<launch>
    <arg name="urdf_path" default="$(find-pkg-share my_urdf_description)/urdf/standalone_arm.xacro" />
    <arg name="rviz_config_path" default="$(find-pkg-share my_urdf_description)/rviz/armurdf_config.rviz" />
    <node pkg="robot_state_publisher" exec="robot_state_publisher" output="screen">
        <param name="robot_description"  value ="$(command 'xacro $(var urdf_path)')" />
    </node>

    <include file="$(find-pkg-share gazebo_ros)/launch/gazebo.launch.py" >
    <arg name="world" value="$(find-pkg-share my_urdf_description)/world/my_world.world" />
    </include>
  
    <node pkg="gazebo_ros" exec="spawn_entity.py"
        args="-topic robot_description -entity arm" />

    <node pkg="rviz2" exec="rviz2" output="screen" 
             args="-d $(var rviz_config_path)"/>

</launch>

    
     
    
 

