<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <gazebo reference="base_link">
        <material>Gazebo/Blue</material>
    </gazebo>

    <gazebo reference="right_wheel_link">
        <material>Gazebo/Grey</material>
    </gazebo>
    
    <gazebo reference="hokuyo_link">
        <material>Gazebo/White</material>
    </gazebo>

    <gazebo reference="left_wheel_link">
        <material>Gazebo/Grey</material>
    </gazebo>

    <gazebo reference="caster_wheel_link">
        <material>Gazebo/Grey</material>
        <mu1 value="0.1" />
        <mu2 value="0.1" />
    </gazebo>

    <gazebo>
        <plugin name="diff_drive_controller" filename="libgazebo_ros_diff_drive.so">
            <update_rate>50</update_rate>

            <!-- Wheels configuration -->
            <left_joint>base_left_wheel_joint</left_joint>
            <right_joint>base_right_wheel_joint</right_joint>
            <wheel_separation>0.45</wheel_separation>
            <wheel_diameter>0.2</wheel_diameter>

            <!-- Command and Odometry topics -->
            <command_topic>cmd_vel</command_topic>
            <odometry_topic>odom</odometry_topic>
            <odometry_frame>odom</odometry_frame>
            <robot_base_frame>base_footprint</robot_base_frame>

            <!-- Odometry settings -->
            <publish_odom>true</publish_odom>
            <publish_odom_tf>true</publish_odom_tf>
            <publish_wheel_tf>true</publish_wheel_tf>

            <!-- Adding noise -->
            <gaussianNoise>
                <!-- Noise to wheel joints, simulating motor noise -->
                <left_wheel>
                    <mean>0.0</mean>
                    <stddev>0.05</stddev> <!-- 5% noise on wheel velocity -->
                </left_wheel>
                <right_wheel>
                    <mean>0.0</mean>
                    <stddev>0.05</stddev> <!-- 5% noise on wheel velocity -->
                </right_wheel>

                <!-- Noise in odometry, simulating sensor drift -->
                <odometry>
                    <mean>0.0</mean>
                    <stddev>0.02</stddev> <!-- 2 cm/s noise in odometry -->
                </odometry>

                <!-- Noise in the robot's angular velocity -->
                <angular_velocity>
                    <mean>0.0</mean>
                    <stddev>0.01</stddev> <!-- Small noise in angular velocity -->
                </angular_velocity>
            </gaussianNoise>
        </plugin>
    </gazebo>

    <!-- IMU Sensor Configuration -->
    <gazebo reference="imu_link">
        <sensor name="imu" type="imu">
            <always_on>true</always_on>
            <update_rate>100</update_rate>
            <imu>
                <angular_velocity>
                    <x>
                        <noise type="gaussian">
                            <mean>0.0</mean>
                            <stddev>1e-5</stddev> <!-- Reduced from 2e-4 -->
                        </noise>
                    </x>
                    <y>
                        <noise type="gaussian">
                            <mean>0.0</mean>
                            <stddev>1e-5</stddev> <!-- Reduced from 2e-4 -->
                        </noise>
                    </y>
                    <z>
                        <noise type="gaussian">
                            <mean>0.0</mean>
                            <stddev>1e-5</stddev> <!-- Reduced from 2e-4 -->
                        </noise>
                    </z>
                </angular_velocity>
                <linear_acceleration>
                    <x>
                        <noise type="gaussian">
                            <mean>0.0</mean>
                            <stddev>5e-3</stddev> <!-- Reduced from 1.7e-2 -->
                        </noise>
                    </x>
                    <y>
                        <noise type="gaussian">
                            <mean>0.0</mean>
                            <stddev>5e-3</stddev> <!-- Reduced from 1.7e-2 -->
                        </noise>
                    </y>
                    <z>
                        <noise type="gaussian">
                            <mean>0.0</mean>
                            <stddev>5e-3</stddev> <!-- Reduced from 1.7e-2 -->
                        </noise>
                    </z>
                </linear_acceleration>
            </imu>
            <plugin name="imu" filename="libgazebo_ros_imu_sensor.so"/>
        </sensor>
    </gazebo>
    
    <gazebo reference="hokuyo_link">
        <sensor name="hls_lfcd_lds" type="ray">
            <always_on>true</always_on>
            <visualize>true</visualize>
            <pose>0 0 0.13 0 0 0</pose>
            <update_rate>5</update_rate>
            <ray>
                <scan>
                    <horizontal>
                        <samples>360</samples>
                        <resolution>1.000000</resolution>
                        <min_angle>0.000000</min_angle>
                        <max_angle>6.280000</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.50000</min>
                    <max>12.0</max>
                    <resolution>0.015000</resolution>
                </range>
                <noise>
                    <type>gaussian</type>
                    <mean>0.0</mean>
                    <stddev>0.01</stddev>
                </noise>
            </ray>
            <plugin name="turtlebot3_laserscan" filename="libgazebo_ros_ray_sensor.so">
                <ros>
                    <remapping>~/out:=scan</remapping>
                </ros>
                <output_type>sensor_msgs/LaserScan</output_type>
                <frame_name>laser_frame</frame_name>
            </plugin>
        </sensor>
    </gazebo>
    
</robot>

